<Page x:Class="IoTServiceApp.MVVM.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IoTServiceApp.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SettingsView">

    <Grid>
        <Rectangle Fill="CornflowerBlue"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="40 20 30 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- title -->
                <TextBlock Grid.Column="0" 
                           Text="Settings"
                           FontSize="30"/>



                <!-- close button -->
                <Button Grid.Column="1" 
                        FontFamily="{StaticResource FontAwesome-Regular}" 
                        Content="&#xf00d;" 
                        FontSize="40"/>
            </Grid>
            
            
            <Grid Grid.Row="2" Background="Black" Width="auto">
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="10 10 10 10">
                    
                    <Button Width="40" Height="40"></Button>
                    <Button Width="40" Height="40"></Button>
                    <Button Width="40" Height="40"></Button>
                    <Button Width="40" Height="40"></Button>
                    
                </StackPanel>
            </Grid>
        </Grid>
        
    </Grid>
</Page>
